    }

    .btn-ruleta {
      display: inline-block;
      padding: 10px 20px;
      background: #B71C1C;
      color: #E0E0E0;
      font-weight: bold;
      text-decoration: none;
      border-radius: 8px;
      transition: 0.3s ease;
      font-size: 16px;
    }

    .btn-ruleta:hover {
      background: #D32F2F;
      box-shadow: 0 0 10px rgba(211, 47, 47, 0.5);
      transform: scale(1.05);
    }

    /* ================= LOGIN FORM ================= */
    .login-form {
      background: #121212;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 20px 40px rgba(201, 162, 39, 0.2);
      border: 2px solid #C9A227;
      max-width: 500px;
      width: 100%;
      margin-top: 100px;
    }

    .login-title {
      color: #C9A227;
      text-align: center;
      margin-bottom: 20px;
    }

    .login-form-group {
      margin-bottom: 20px;
    }

    .login-form-group label {
      font-weight: bold;
      margin-bottom: 8px;
      display: block;
      color: #E0E0E0;
    }

    .login-input {
      padding: 12px;
      border: 1px solid #444;
      border-radius: 6px;
      background: #1e1e1e;
      color: #E0E0E0;
      width: 100%;
    }

    .login-submit-btn {
      background: #B71C1C;
      color: #E0E0E0;
      font-weight: bold;
      border: none;
      padding: 14px;
      border-radius: 8px;
      cursor: pointer;
      transition: background 0.3s ease, box-shadow 0.3s ease;
      width: 100%;
    }

    .login-submit-btn:hover {
      background: #D32F2F;
      box-shadow: 0 0 10px rgba(211, 47, 47, 0.4);
    }

    .login-alt-link,
    .login-forgot {
      text-align: center;
      margin-top: 15px;
      display: block;
      font-weight: bold;
    }

    .login-alt-link a,
    .login-forgot {
      color: #B71C1C;
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .login-alt-link a:hover,
    .login-forgot:hover {
      color: #D32F2F;
    }

    /* ================= TÍTULOS DE PÁGINA ================= */
    main h1 {
      text-align: center;
      color: #C9A227;
      text-shadow: 0 0 12px rgba(201, 162, 39, 0.35);
      letter-spacing: 0.5px;
      font-size: clamp(28px, 4vw, 40px);
      margin-bottom: 12px;
    }

    /* ================= SECCIONES (ABOUT) ================= */
    .about,
    .team,
    .tech {
      background: #121212;
      border: 1px solid rgba(255, 255, 255, 0.06);
      border-radius: 12px;
      padding: 32px;
      box-shadow: 0 14px 30px rgba(201, 162, 39, 0.25);
      max-width: 1100px;
      width: 100%;
      margin: 0 auto;
    }

    .about+.team,
    .team+.tech {
      margin-top: 24px;
    }

    .about::before,
    .team::before,
    .tech::before {
      content: "";
      display: block;
      height: 3px;
      margin: -32px -32px 24px;
      background: linear-gradient(90deg, #C9A227, transparent 70%);
      border-top-left-radius: 12px;
      border-top-right-radius: 12px;
    }

    .about h2,
    .team h2,
    .tech h2 {
      color: #E0E0E0;
      font-size: clamp(20px, 2.5vw, 28px);
      border-left: 4px solid #C9A227;
      padding-left: 12px;
      margin-bottom: 16px;
      border-bottom: none !important;
      padding-bottom: 0 !important;
    }

    .about p {
      color: #B0BEC5;
      font-size: 16px;
      max-width: 80ch;
    }

    .team>div {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 24px;
      align-items: start;
    }

    .team>div>h2 {
      grid-column: 1 / -1;
    }

    .card {
      background: linear-gradient(180deg, rgba(255, 255, 255, 0.03), rgba(255, 255, 255, 0.01));
      border: 1px solid rgba(255, 255, 255, 0.06);
