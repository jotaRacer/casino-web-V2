    <div class="monto-apuesta">
      <label for="monto">Monto:</label>
      <input type="number" id="monto" placeholder="$0" min="100">
      <button id="apostar-btn">Apostar</button>
    </div>
  </div>

  <aside class="sidebar">
    <div class="ruleta-info-card">
      <h3 class="titulo-info-ruleta">Estado del Juego</h3>
      <div id="estado-ruleta" class="status-ruleta">Esperando apuesta...</div>
    </div>

    <div class="ruleta-info-card">
      <h3 class="titulo-info-ruleta">Saldo Disponible</h3>
      <div class="balance-ruleta" id="saldo-display">
        ${{formatCLP (defaultZero saldo)}}
      </div>
    </div>

    <div class="ruleta-info-card">
      <h3 class="titulo-info-ruleta">Últimos números ganadores</h3>
      <div id="lista-ganadores" class="lista-ganadores">
        {{#each ultimosGanadores}}
        {{#if this.empty}}
        <div class="numero-ganador empty"></div>
        {{else}}
        <div class="numero-ganador {{this.color}}">{{this.num}}</div>
        {{/if}}
        {{/each}}
      </div>
    </div>

    <div class="ruleta-info-card">
      <h3 class="titulo-info-ruleta">Historial de Apuestas</h3>
      <table class="apuestas-table">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Monto</th>
            <th>Resultado</th>
          </tr>
        </thead>
        <tbody id="historial-body">
          {{#each historialApuestas}}
          <tr>
            <td>{{this.tipo}}</td>
            <td>{{this.valor}}</td>
            <td>${{formatCLP this.monto}}</td>
            <td style="color: {{this.resultadoColor}};">{{this.resultado}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </aside>

</div>
