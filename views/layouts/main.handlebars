    width: 100%;
    border-collapse: collapse;
    margin-top: 0.75rem;
    font-size: 0.95rem;
}

.apuestas-table th {
    background-color: #C9A227;
    color: #121212;
    padding: 0.75rem;
    text-align: left;
}

.apuestas-table td {
    padding: 0.65rem;
    border-top: 1px solid #333;
}

