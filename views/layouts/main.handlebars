    }

    h2 {
      color: #C9A227;
      margin-bottom: 8px;
      border-bottom: 1px solid #444;
      padding-bottom: 4px;
      font-size: 18px;
    }

    .saldo {
      font-size: 1.3rem;
      font-weight: bold;
      color: #4CAF50;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 8px;
      font-size: 14px;
    }

    table th,
    table td {
      padding: 8px;
      text-align: center;
    }

    table th {
      background: #C9A227;
