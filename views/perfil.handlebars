<div class="box-perfil-container">

  <div class="perfil-header">
    <h1>{{user.email}}</h1>
    <p class="correo">{{user.email}}</p>
  </div>

  <div class="perfil-info">
    <h2>Información Personal</h2>
    <p><strong>Fecha de nacimiento:</strong> {{fechaNacimiento}}</p>
    <p><strong>Ciudad:</strong> Santiago, Chile</p>
  </div>

  <div class="perfil-saldo">
    <h2>Saldo Actual</h2>
    <p class="saldo">{{formatCLP (defaultZero user.saldo)}}</p>
  </div>

  <div class="perfil-transacciones">
    <h2>Últimas 5 Transacciones</h2>
    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Tipo</th>
          <th>Monto</th>
        </tr>
      </thead>
      <tbody>
        {{#each transacciones}}
        <tr>
          <td>{{this.fecha}}</td>
          <td>{{this.tipo}}</td>
          <td>${{this.monto}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="perfil-actions">
    <a href="/casino" class="btn-ruleta">Ir a la Mesa de Ruleta</a>
    <a href="#" class="btn-ruleta">Editar perfil</a>
    <a href="/logout" class="btn-ruleta">Cerrar Sesión</a>
  </div>
</div>
