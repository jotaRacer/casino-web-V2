          border: none;
          cursor: pointer;
          transition: background 0.3s ease, box-shadow 0.3s ease;
        }

        .card-transaccion button:hover {
          background: #D32F2F;
          box-shadow: 0 0 10px rgba(211, 47, 47, 0.4);
        }

        /* ================= PERFIL ================= */
        .box-perfil-container {
          text-align: center;
          background: #121212;
          padding: 20px;
          border-radius: 12px;
          box-shadow: 0 15px 30px rgba(201, 162, 39, 0.2);
          position: relative;
          overflow: hidden;
          width: 90%;
          border: 2px solid #C9A227;
          max-width: 500px; 
          margin: 0 auto;
        }

        .perfil-header {
          text-align: center;
          margin-bottom: 20px;
        }

        .perfil-avatar {
          width: 90px;
          height: 90px;
          border-radius: 50%;
          border: 3px solid #C9A227;
          margin-bottom: 10px;
        }

        .perfil-header h1 {
          font-size: 24px;
          color: #C9A227;
          text-shadow: 0 0 8px rgba(201, 162, 39, 0.6);
        }

        .correo {
          color: #B0BEC5;
          margin-top: 5px;
          font-size: 14px;
        }

        .perfil-info,
        .perfil-saldo,
        .perfil-transacciones {
          margin-bottom: 20px;
          text-align: left;
        }

        h2 {
          color: #C9A227;
          margin-bottom: 8px;
          border-bottom: 1px solid #444;
          padding-bottom: 4px;
          font-size: 18px;
        }

        .saldo {
          font-size: 1.3rem;
          font-weight: bold;
          color: #4CAF50;
        }

        table {
          width: 100%;
          border-collapse: collapse;
          margin-top: 8px;
          font-size: 14px;
        }

        table th,
        table td {
          padding: 8px;
          text-align: center;
        }

        table th {
          background: #C9A227;
          color: black;
        }

        table tr:nth-child(even) {
          background: #2c2c2c;
        }
        table tr:nth-child(odd) {
          background: #1a1a1a;
        }

        .perfil-actions {
          text-align: center;
          margin-top: 15px;
        }

        .btn-ruleta {
          display: inline-block;
          padding: 10px 20px;
          background: #B71C1C;
          color: #E0E0E0;
          font-weight: bold;
          text-decoration: none;
          border-radius: 8px;
          transition: 0.3s ease;
          font-size: 16px;
        }

        .btn-ruleta:hover {
          background: #D32F2F;
          box-shadow: 0 0 10px rgba(211, 47, 47, 0.5);
          transform: scale(1.05);
        }

        /* ================= LOGIN FORM ================= */
        .login-form {
          background: #121212;
          padding: 40px;
          border-radius: 12px;
          box-shadow: 0 20px 40px rgba(201, 162, 39, 0.2);
          border: 2px solid #C9A227;
          max-width: 500px;
          width: 100%;
          margin-top: 100px;
        }

        .login-title {
          color: #C9A227;
          text-align: center;
          margin-bottom: 20px;
        }

        .login-form-group {
          margin-bottom: 20px;
        }

        .login-form-group label {
          font-weight: bold;
          margin-bottom: 8px;
          display: block;
          color: #E0E0E0;
        }

        .login-input {
          padding: 12px;
          border: 1px solid #444;
          border-radius: 6px;
          background: #1e1e1e;
          color: #E0E0E0;
          width: 100%;
        }

        .login-submit-btn {
          background: #B71C1C;
          color: #E0E0E0;
          font-weight: bold;
          border: none;
          padding: 14px;
          border-radius: 8px;
          cursor: pointer;
          transition: background 0.3s ease, box-shadow 0.3s ease;
          width: 100%;
        }

        .login-submit-btn:hover {
          background: #D32F2F;
          box-shadow: 0 0 10px rgba(211, 47, 47, 0.4);
        }

        .login-alt-link,
        .login-forgot {
          text-align: center;
          margin-top: 15px;
          display: block;
          font-weight: bold;
        }

        .login-alt-link a,
        .login-forgot {
          color: #B71C1C;
          text-decoration: none;
          transition: color 0.3s ease;
        }

        .login-alt-link a:hover,
        .login-forgot:hover {
          color: #D32F2F;
        }
        
        /* ================= TÍTULOS DE PÁGINA ================= */
        main h1 {
          text-align: center;
          color: #C9A227; 
          text-shadow: 0 0 12px rgba(201,162,39,0.35);
          letter-spacing: 0.5px;
          font-size: clamp(28px, 4vw, 40px);
          margin-bottom: 12px;
        }

        /* ================= SECCIONES (ABOUT) ================= */
        .about,
        .team,
        .tech {
          background: #121212; 
          border: 1px solid rgba(255,255,255,0.06);
          border-radius: 12px; 
          padding: 32px;
          box-shadow: 0 14px 30px rgba(201, 162, 39, 0.25); 
          max-width: 1100px; 
          width: 100%;
          margin: 0 auto;
        }

        .about + .team,
        .team + .tech {
          margin-top: 24px; 
        }

        .about::before,
        .team::before,
        .tech::before {
          content: "";
          display: block;
          height: 3px;
          margin: -32px -32px 24px;
          background: linear-gradient(90deg, #C9A227, transparent 70%);
          border-top-left-radius: 12px;
          border-top-right-radius: 12px;
        }
        .about h2,
        .team h2,
        .tech h2 {
          color: #E0E0E0; 
          font-size: clamp(20px, 2.5vw, 28px);
          border-left: 4px solid #C9A227; 
          padding-left: 12px;
          margin-bottom: 16px;
          border-bottom: none !important;
          padding-bottom: 0 !important;
        }

        .about p {
          color: #B0BEC5; 
          font-size: 16px;
          max-width: 80ch;
        }

        .team > div {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
          gap: 24px; 
          align-items: start;
        }
        .team > div > h2 {
          grid-column: 1 / -1;
        }

        .card {
          background: linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01));
          border: 1px solid rgba(255,255,255,0.06);
          border-radius: 12px;
          padding: 20px;
          text-align: center;
          transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
        }
        .card:hover {
          transform: translateY(-4px);
          box-shadow: 0 16px 32px rgba(201, 162, 39, 0.25);
          border-color: #C9A227;
        }
        .card img {
          width: 120px;
          height: 120px;
          object-fit: cover;
          border-radius: 50%;
          border: 2px solid #C9A227;
          box-shadow: 0 0 10px rgba(201,162,39,0.35);
        }
        .card h3 {
          font-size: 18px;
          color: #E0E0E0;
          margin-top: 10px;
        }
        .card p {
          color: #B0BEC5;
          font-size: 14px;
          margin-top: 8px;
        }
        .card p strong {
          color: #E0E0E0;
        }

        .tech-grid {
          list-style: none;
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
          gap: 16px;
          margin-top: 16px;
          padding: 0;
        }
        .tech-item {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          gap: 8px;
          background: rgba(255,255,255,0.03);
          border: 1px solid rgba(255,255,255,0.06);
          border-radius: 12px;
          padding: 16px;
          transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
        }
        .tech-item:hover {
          transform: translateY(-3px);
          border-color: #C9A227;
          box-shadow: 0 10px 20px rgba(201, 162, 39, 0.25);
        }
        .tech-item img {
          width: 56px;
          height: 56px;
          object-fit: contain;
          filter: drop-shadow(0 2px 6px rgba(0,0,0,0.3));
        }

