        }

        .casino-home-about-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .casino-home-about-divider {
            width: 4px;
            height: 3rem;
            background-color: #C9A227;
            margin-right: 1rem;
        }

        .casino-home-about-header h2 {
            font-size: 1.875rem;
            font-weight: bold;
            color: #E0E0E0;
        }

        .casino-home-about-text {
            font-size: 1.125rem;
            line-height: 1.6;
            color: #B0BEC5;
        }

