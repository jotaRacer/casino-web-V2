<div class="box-perfil-container">

  <div class="perfil-header">
    <h1>{{user.email}}</h1>
    <p class="correo">{{user.email}}</p>
  </div>

  <div class="perfil-info">
    <h2>Información Personal</h2>
    <p><strong>Fecha de nacimiento:</strong> {{fechaNacimiento}}</p>
  </div>

  <div class="perfil-saldo">
    <h2>Saldo Actual</h2>
    <p class="saldo">{{formatCLP (defaultZero user.saldo)}}</p>
  </div>

  <div class="perfil-transacciones">
    <h2>Últimas transacciones</h2>
    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Tipo</th>
          <th>Monto</th>
        </tr>
      </thead>
      <tbody id="transactionTable">
        {{#each transacciones}}
        <tr>
          <td>{{this.fecha}}</td>
          <td>{{this.tipo}}</td>
          <td>${{this.monto}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="ruleta-info-card">
      <h3 class="titulo-info-ruleta">Historial de Apuestas</h3>
      <table class="apuestas-table">
        <thead>
          <tr>
            <th>Tipo</th>
            <th>Valor</th>
            <th>Monto</th>
            <th>Resultado</th>
          </tr>
        </thead>
        <tbody id="historial-body">
          {{#each historialApuestas}}
          <tr>

            <td>{{this.tipo}}</td>
            <td>{{this.valor}}</td>
            <td>${{formatCLP this.monto}}</td> 
            <td style="color: {{this.resultadoColor}};">{{this.resultado}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  <div class="perfil-actions">
    <a href="/ruleta" class="btn-ruleta">Ir a la Mesa de Ruleta</a>
    <a href="/logout" class="btn-ruleta">Cerrar Sesión</a>
  </div>
</div>
