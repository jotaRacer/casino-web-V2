                        </div>
                    </a>
                    <button onclick="handleLogout()" class="login-btn" style="margin-left: 12px;">Cerrar sesión</button>
                `;

        // Cargar saldo del usuario
        loadUserBalance();
      } else {
        // Usuario no autenticado - mostrar botones de login/registro
        navbarAuth.innerHTML = `
                    <a href="/register" class="perfil-btn">Registrarse</a>
                    <a href="/login" class="login-btn">Iniciar sesión</a>
                `;
      }
    }

    // Cargar saldo del usuario
    async function loadUserBalance() {
      try {
        const token = localStorage.getItem('casino_auth_token');
        if (!token) return;

        const response = await fetch('/api/auth/me', {
          headers: {
            'Authorization': `Bearer ${token}`
          }
        });

        if (response.ok) {
          const data = await response.json();
          const saldoElement = document.getElementById('navbar-saldo');
          if (saldoElement && data.user) {
            // Formatear saldo en CLP (sin símbolo, CSS lo agrega)
            const saldoFormateado = new Intl.NumberFormat('es-CL', {
              style: 'decimal',
              maximumFractionDigits: 0
            }).format(data.user.saldo || 0);
            saldoElement.textContent = saldoFormateado;
          }
        } else if (response.status === 401) {
          // Token inválido - eliminar y actualizar navbar
          localStorage.removeItem('casino_auth_token');
          updateNavbar();
        }
      } catch (error) {
        console.error('Error cargando saldo:', error);
      }
    }

    // Manejar logout
    async function handleLogout() {
      try {
        const token = localStorage.getItem('casino_auth_token');
        if (token) {
          await fetch('/api/auth/logout', {
            method: 'POST',
            headers: {
              'Authorization': `Bearer ${token}`
            }
          });
        }
      } catch (error) {
        console.error('Error en logout:', error);
      }

      localStorage.removeItem('casino_auth_token');
      window.location.href = '/';
    }

    // Actualizar navbar cuando la página carga
    updateNavbar();

    // Actualizar navbar cuando cambia el localStorage (ej: login en otra pestaña)
    window.addEventListener('storage', (e) => {
      if (e.key === 'casino_auth_token') {
        updateNavbar();
      }
    });
