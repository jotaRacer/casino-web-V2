      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
      border: 1px solid #444;
    }

    .card-transaccion label {
      font-size: 14px;
      font-weight: bold;
      color: #E0E0E0;
      margin-bottom: 6px;
      display: block;
    }

    .card-transaccion input {
      width: 100%;
      padding: 10px;
      font-size: 14px;
      border: 1px solid #444;
      border-radius: 6px;
      background: #1e1e1e;
      color: #E0E0E0;
      margin-bottom: 14px;
    }

    .card-transaccion button {
      width: 100%;
      padding: 14px;
      font-size: 16px;
      font-weight: bold;
      border-radius: 8px;
      background: #B71C1C;
      color: #E0E0E0;
      border: none;
      cursor: pointer;
      transition: background 0.3s ease, box-shadow 0.3s ease;
    }

    .card-transaccion button:hover {
      background: #D32F2F;
      box-shadow: 0 0 10px rgba(211, 47, 47, 0.4);
    }

    /* ================= PERFIL ================= */
    .box-perfil-container {
      text-align: center;
      background: #121212;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 15px 30px rgba(201, 162, 39, 0.2);
