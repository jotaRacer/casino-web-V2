<div class="box-perfil-container">

  <div class="perfil-header">
    <h1>Cargando...</h1>
    <p class="correo"></p>
  </div>

  <div class="perfil-info">
    <h2>Información Personal</h2>
    <p><strong>Fecha de nacimiento:</strong> {{fechaNacimiento}}</p>
  </div>

  <div class="perfil-saldo">
    <h2>Saldo Actual</h2>
    <p id="perfil-saldo-display">Cargando...</p>
  </div>

  <div class="perfil-transacciones">
    <h2>Últimas transacciones</h2>
    <table>
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Tipo</th>
          <th>Monto</th>
        </tr>
      </thead>
      <tbody id="transactionTable">
        <tr>
          <td colspan="3" style="text-align: center;">Cargando...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="ruleta-info-card">
    <h3 class="titulo-info-ruleta">Historial de Apuestas</h3>
    <table class="apuestas-table">
      <thead>
        <tr>
          <th>Tipo</th>
          <th>Valor</th>
          <th>Monto</th>
          <th>Resultado</th>
        </tr>
      </thead>
      <tbody id="historial-body">
        <tr>
          <td colspan="4" style="text-align: center;">Cargando...</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="perfil-actions">
    <a href="/ruleta" class="btn-ruleta">Ir a la Mesa de Ruleta</a>
    <a href="/deposito" class="btn-ruleta">Ir a Depósito</a>
  </div>
</div>

<script src="/js/perfil.js?v=4"></script>