    /* ================= RULES ================= */

    .wrap {
      width: 100%;
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .page-title {
      text-align: center;
      color: #C9A227;
      text-shadow: 0 0 12px rgba(201, 162, 39, 0.35);
      letter-spacing: 0.5px;
      font-size: clamp(28px, 4vw, 40px);
      margin-bottom: 6px;
    }

    .meta {
      text-align: center;
      color: #B0BEC5;
      font-size: 14px;
      margin-bottom: 20px;
    }

    .grid {
      display: grid;
      grid-template-columns: 280px 1fr;
      gap: 24px;
      width: 100%;
    }

    @media (max-width: 900px) {
      .grid {
        grid-template-columns: 1fr;
      }
    }

    /* Hacer que el main dentro de grid use CSS Grid para igualar alturas de cards */
    .wrap>.grid>main {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: repeat(6, 1fr) auto;
      gap: 20px;
      align-items: stretch;
    }

    /* Las cards ocupan las primeras 6 filas del grid con altura uniforme */
    .wrap>.grid>main>section.card {
      grid-column: 1;
    }

    /* Asegurar que el botón "Volver arriba" no afecte la altura de las cards */
    .wrap>.grid>main>.back-top {
      grid-column: 1;
      grid-row: 7;
      margin-top: 10px;
      align-self: start;
      height: auto;
    }

    .toc {
      background: #121212;
      border: 1px solid rgba(255, 255, 255, 0.06);
      border-radius: 12px;
      padding: 16px;
      box-shadow: 0 14px 30px rgba(201, 162, 39, 0.25);
    }

    .toc h3 {
      margin: 0 0 10px;
      font-size: 16px;
      color: #E0E0E0;
    }

    .toc a {
      display: block;
      color: #B0BEC5;
      text-decoration: none;
      padding: 8px 8px 8px 10px;
      border-left: 3px solid transparent;
      border-radius: 6px;
      transition: color .2s ease, border-color .2s ease, background .2s ease;
    }

    .toc a:hover {
      color: #FFFFFF;
      border-left-color: #C9A227;
      background: rgba(255, 255, 255, 0.03);
    }

    /* Cards específicas para la página de Reglas - SIN hover problemático */
    .wrap>.grid>main>section.card {
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.06);
      border-radius: 12px;
      padding: 20px;
      text-align: left;
      margin-bottom: 0;
      /* Altura uniforme para todas las cards */
      min-height: 220px;
      height: 100%;
      display: flex;
